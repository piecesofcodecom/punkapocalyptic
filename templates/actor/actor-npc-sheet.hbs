<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"
      style=" height: 299px; width: 217px; box-shadow: rgba(0, 0, 0, 0.05) 0px 0px 0px 1px; border: 0px;">
      <div class="healthContainer">
          <button class="decrease"><i class="fa-solid fa-minus icon-center"></i></button>
          <button class="increase"><i class="fa-solid fa-plus icon-center"></i></button>
          <div class="healthBarShell">
            <div class="healthBarValue" style="width: {{healthPercentage system.health.value system.health.max}}"></div>
            <div class="healthDisplay"><input type="text" class="vida" name="system.health.value"
                value="{{system.health.value}}" data-dtype="Number"></div> <!-- Larger health display -->
          </div>
        </div>
    <div class="header-fields">
      <div class="grid-span-2">
        <h1 class="charname title-punk">
          <input name="name" type="text" value="{{actor.name}}" placeholder="Name" />
        </h1>
      </div>
      {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
      use both the "grid" and "grid-Ncol" class where "N" can be any number
      from 1 to 12 and will create that number of columns. --}}
      <div class="resources grid grid-2col">
        <!--div class="grid-span-1">
          <img class="" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" style=" height: 100%; width: 100%">
        </div-->

        <div class="grid-span-1">
          {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
          use both the "grid" and "grid-Ncol" class where "N" can be any number
          from 1 to 12 and will create that number of columns. --}}
          <div class="grid-span-1 row-span-2" style="grid-row: span 2;">
            {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
            use both the "grid" and "grid-Ncol" class where "N" can be any number
            from 1 to 12 and will create that number of columns. --}}
            <div class="abilities-npc flexcol">
              {{#each system.abilities as |ability key|}}
              <div class="ability flexrow flex-group-center {{key}}">
                <label for="system.abilities.{{key}}.value" class="ability-name rollable flexlarge align-left"
                  data-roll-type="ability" data-ability-id="{{key}}"
                  data-label="{{localize (lookup @root.config.abilities key)}}"
                  data-tooltip="{{ability.tooltip}}">{{localize (lookup @root.config.abilities
                  key)}}</label>
                <input type="text" name="system.abilities.{{key}}.value" value="{{ability.value}}"
                  data-dtype="Number" />
              </div>
              {{/each}}
            </div>
          </div>
        </div>
        <div class="grid-span-1">
          <div class="flexcol">
            <div class="ability flexrow">
              <label class="ability-name flexlarge" for="system.challange">{{localize "PUNKAPOCALYPTIC.SheetLabels.Challange"}}</label>
              <input class="" type="text" name="system.challange" value="{{system.challange}}"
                data-dtype="Number"  />
            </div>
            <div class="ability flexrow">
              <label class="ability-name flexlarge" for="system.size">{{localize
                "PUNKAPOCALYPTIC.SheetLabels.Size"}}</label>
              <input type="text" name="system.size" value="{{system.size}}" data-dtype="Number"
                 />
            </div>
            <div class="ability flexrow">
              <label class="ability-name min-115" for="system.speed.current">{{localize "PUNKAPOCALYPTIC.SheetLabels.Speed"}}</label>
              <input type="text" name="system.speed.current" value="{{system.speed.current}}" data-dtype="Number"
                 />
            </div>
            <div class="ability flexrow">
              <label class="ability-name min-115 align-left" for="system.defense.current">{{localize "PUNKAPOCALYPTIC.SheetLabels.Defense"}}</label>
              <input type="text" name="system.defense.current" value="{{system.defense.current}}" data-dtype="Number"
                 />
            </div>
            <div class="ability flexrow">
              <label class="ability-name min-115 align-left" for="system.health.max">{{localize "PUNKAPOCALYPTIC.SheetLabels.Health"}}</label>

              <input type="text" name="system.health.max" value="{{system.health.max}}" data-dtype="Number"
                 />


            </div>
          </div>
        </div>


      </div>
      <div class="resources grid">
        {{!-- <div class="healthContainer">
          <button class="decrease"><i class="fa-solid fa-minus icon-center"></i></button>
          <button class="increase"><i class="fa-solid fa-plus icon-center"></i></button>
          <div class="healthBarShell">
            <div class="healthBarValue" style="width: {{healthPercentage system.health.value system.health.max}}"></div>
            <div class="healthDisplay"><input type="text" class="vida" name="system.health.value"
                value="{{system.health.value}}" data-dtype="Number"></div> <!-- Larger health display -->
          </div>
        </div> --}}
      </div>
    </div>

  </header>



  {{!-- Sheet Body --}}
  <section class="sheet-body">
    <nav class="sheet-tabs tabs nav-punk" data-group="primary">
      {{!-- Default tab is specified in actor-sheet.mjs --}}
      <a class="item header-tab" data-tab="features">{{localize "PUNKAPOCALYPTIC.SheetLabels.Main"}}</a>
      <a class="item header-tab" data-tab="description">{{localize "PUNKAPOCALYPTIC.SheetLabels.Background"}}</a>
      <!--a class="item header-tab" data-tab="effects">Effects</a-->
    </nav>
    <div class="tab features" data-group="primary" data-tab="features">
      <div class="resources grid grid-2col">
        <div class="grid-span-1">
          <h3 class="title-bg">{{localize "PUNKAPOCALYPTIC.SheetLabels.Traits"}}</h3>
          {{> "systems/punkapocalyptic/templates/actor/parts/npc-traits.hbs"}}
        </div>
        <div class="grid-span-1 row-span-2">
          <h3 class="title-bg">{{localize "PUNKAPOCALYPTIC.SheetLabels.Inventory"}}</h3>
          {{> "systems/punkapocalyptic/templates/actor/parts/actor-inventory.hbs"}}
        </div>
        <div class="grid-span-1">
          <h3 class="title-bg">{{localize "PUNKAPOCALYPTIC.SheetLabels.SpecialActivities"}}</h3>
          {{> "systems/punkapocalyptic/templates/actor/parts/actor-special-activities.hbs"}}
        </div>

      </div>
    </div>


    {{!-- Owned Items Tab --}}
    <div class="tab biography" data-group="primary" data-tab="description">

      {{editor enrichedBiography target="system.biography" engine="prosemirror" button=true editable=editable}}
    </div>



  </section>
</form>