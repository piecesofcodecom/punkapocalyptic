<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'PUNKAPOCALYPTIC.SheetLabels.Name'}}</div>
    <div class='item-type'>{{localize 'PUNKAPOCALYPTIC.SheetLabels.Type'}}</div>
    {{#if mission}} <div class='item-mission'>{{localize 'PUNKAPOCALYPTIC.SheetLabels.Mission'}}</div>{{/if}}
    <div class='item-controls'>
      <a
        class='item-control item-associate'
        title=''
        data-type='benefit'
      >
        <i class='fas fa-plus'></i>
        
      </a>
    </div>
  </li>
  {{#each items as |item id|}}
    <li class='item flexrow' data-item-uuid='{{item.uuid}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>

      <div class='item-ability item-prop' data-item-uuid="{{item.uuid}}">
        {{localize (concat "TYPES.Item." item.type) }}
      </div>
      {{#if ../mission}}
      <div class='item-ability item-prop' data-item-uuid="{{item.uuid}}">
        {{item.system.missions}}
      </div>
      {{/if}}
      <div class='item-controls'>
        <a
          class='item-control item-open'
          title='{{localize "DOCUMENT.Update" type='Item'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-remove'
          title='{{localize "DOCUMENT.Delete" type='Item'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>